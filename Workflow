name: Deploy to EC2

on:
  push:
    branches:
      - master

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Install dependencies
        run: |
          sudo apt-get update
          sudo apt-get install python3-pip -y
          pip3 install flask

      - name: Copy files to EC2
        run: |
          scp -i /path/to/your/key.pem -r * ec2-user@your-ec2-ip:/home/ec2-user/app

      - name: Run the application
        run: |
          ssh -i /path/to/your/key.pem ec2-user@your-ec2-ip 'cd /home/ec2-user/app && nohup python3 app.py &'
